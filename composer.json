{
    "name": "epfremme/test-everything",
    "description": "Run project tests using all composer dependencies",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "epfremme",
            "email": "epfremme@nerdery.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Epfremme\\Everything\\": "src/",
            "Epfremme\\Everything\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.3",
        "kherge/box": "^2.6",
        "symfony/console": "~2.1",
        "symfony/event-dispatcher": "~2.1",
        "symfony/filesystem": "~2.1",
        "symfony/process": "~2.1",
        "liuggio/fastest": "^1.1",
        "composer/semver": "^1.2",
        "guzzlehttp/guzzle": "^6.1",
        "tebru/retrofit-php": "^2.5",
        "jms/serializer": "^1.1",
        "epfremme/collections": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0"
    },
    "config": {
        "bin-dir": "bin/"
    }
}
